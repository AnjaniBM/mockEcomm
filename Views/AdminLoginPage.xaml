<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mockEcomm.Views.AdminLoginPage"
             Title="Login"
             BackgroundColor="#DED7D6">
    
    <VerticalStackLayout  VerticalOptions="Center" Margin="20" Spacing="6">
       
        <Entry Placeholder="Username" x:Name="usrName" HorizontalOptions="CenterAndExpand"></Entry>
        <Entry Placeholder="Password" x:Name="pass" IsPassword="True" HorizontalOptions="CenterAndExpand"></Entry>
        <Button Text="Login" HorizontalOptions="Fill" ></Button>
       
        
    </VerticalStackLayout>
  
</ContentPage>