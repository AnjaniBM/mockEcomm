<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mockEcomm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mockEcomm"
    Shell.FlyoutBehavior="Disabled"
    FlyoutBackgroundColor="White"
    Title="mockEcomm"
    xmlns:view="clr-namespace:mockEcomm.Views">

    <TabBar>

       
            <ShellContent Title="Home"
              ContentTemplate="{DataTemplate view:HomePage}"
              >

            </ShellContent>

            <ShellContent Title="ProductsPage"
                            Icon="dotnet_bot.png"
              ContentTemplate="{DataTemplate view:ProductsPage}"
              >

            </ShellContent>
            <ShellContent Title="ProductDetailsPage"
                          Icon="dotnet_bot.png"
              ContentTemplate="{DataTemplate view:ProductDetailPage}"
              >

            </ShellContent>
            
           
        
        <ShellContent 
            Title="Home"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate view:HomePage}"
            ></ShellContent>
        
        
    </TabBar>


</Shell>
